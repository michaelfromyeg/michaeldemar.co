{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false
    },
    "include": ["src/components", "src/custom.d.ts"],
    "exclude": ["node_modules", "public", ".cache"]
}
